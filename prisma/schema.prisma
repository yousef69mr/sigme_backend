generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  // id        Int      @id @default(autoincrement())
  name  String
  email String @unique
  password String
  phone String  @unique

  avatar String?
  gender   String?

  // contacts Contact[]

  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

